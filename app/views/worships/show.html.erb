<div class="contents row">
  <div class="content_post" style="background-image: url(<%= @worship.image %>);">
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to '編集', edit_worship_path(@worship.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', worship_path(@worship.id), method: :delete %>
        </li>
      </ul>
    </div>
    <p><%= @worship.text %></p>
    <span class="name">
      <a href="/users/<%= @tweet.user.id %>">
        <span>投稿者</span><%= @tweet.user.nickname %>
      </a>
    </span>
    
  </div>
</div>